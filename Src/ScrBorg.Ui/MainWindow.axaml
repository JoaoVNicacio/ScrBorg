<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ScrBorg.Ui.ViewModels"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="ScrBorg.Ui.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="ScrBorg.Ui">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
            <Button Content="Iniciar"
                    Command="{Binding StartCommand}" />
            <Button Content="Parar"
                    Command="{Binding StopCommand}"
                    IsEnabled="{Binding IsRunning}" />
        </StackPanel>
        <TextBlock Text="Área para a exibição da tela do celular (placeholder)"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding TerminalOutput}" />
    </Grid>
</Window>
